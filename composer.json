{
    "name": "tombroucke/otomaties-core",
    "description": "Optimize WordPress installation for performance, security etc.",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Broucke",
            "email": "tom@tombroucke.be"
        }
    ],
	"autoload": {
		"psr-4": {
			"Otomaties\\Core\\": "app/"
		}
	},
    "require": {
        "php": "^8.0",
        "composer/installers": "^1.0 || ^2.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": [
            "phpunit --colors=always --verbose",
            "phpcs --standard=PSR2 app",
            "vendor/bin/phpstan analyze app --memory-limit 512M"
        ]
    },
    "require-dev": {
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/extension-installer": "^1.3"
    }
}

{
  "name": "tombroucke/otomaties-core",
  "description": "Optimize WordPress installation for performance, security etc.",
  "type": "wordpress-muplugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Broucke",
      "email": "tom@tombroucke.be"
    }
  ],
  "autoload": {
    "psr-4": {
      "Otomaties\\Core\\": "app/"
    }
  },
  "require": {
    "php": "^8.0",
    "composer/installers": "^1.0 || ^2.0"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "scoped-dependencies": {
      "illuminate/container": "^12.40",
      "illuminate/support": "^12.40",
      "illuminate/config": "^12.40"
    }
  },
  "scripts": {
    "build": [
      "@build:php"
    ],
    "test": [
      "phpunit --colors=always tests",
      "phpcs --standard=PSR2 app",
      "vendor/bin/phpstan analyze --memory-limit 1024M"
    ],
    "build:php": [
      "./scoper.sh"
    ]
  },
  "require-dev": {
    "szepeviktor/phpstan-wordpress": "^1.3",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/extension-installer": "^1.3",
    "laravel/pint": "^1.26",
    "php-stubs/woocommerce-stubs": "^9.5",
    "php-stubs/wp-cli-stubs": "^2.12",
    "phpunit/phpunit": "^12.4",
    "humbug/php-scoper": "^0.18.18"
  }
}
